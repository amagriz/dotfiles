# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east
alt - d: yabai -m display --focus south
alt - f: yabai -m display --focus north

# rotate layout clockwise
cmd + ctrl + alt + shift - r : yabai -m space --rotate 270

# flip along y-axis
cmd + ctrl + alt + shift - y : yabai -m space --mirror y-axis

# flip along x-axis
cmd + ctrl + alt + shift - x : yabai -m space --mirror x-axis

# toggle window float
cmd + ctrl + alt + shift - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
cmd + ctrl + alt + shift - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
cmd + ctrl + alt + shift - e : yabai -m space --balance

# swap windows
cmd + ctrl + alt + shift - j : yabai -m window --swap south
cmd + ctrl + alt + shift - k : yabai -m window --swap north
cmd + ctrl + alt + shift - h : yabai -m window --swap west
cmd + ctrl + alt + shift - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
cmd + ctrl + alt + shift - s : yabai -m window --display west; yabai -m display --focus west;
cmd + ctrl + alt + shift - g : yabai -m window --display east; yabai -m display --focus east;
cmd + ctrl + alt + shift - d : yabai -m window --display south; yabai -m display --focus south;
cmd + ctrl + alt + shift - f : yabai -m window --display north; yabai -m display --focus north;

#move window to prev and next space
cmd + ctrl + alt + shift - p : yabai -m window --space prev;
cmd + ctrl + alt + shift - n : yabai -m window --space next;

# move window to space #
cmd + ctrl + alt + shift - 1 : yabai -m window --space 1;
cmd + ctrl + alt + shift - 2 : yabai -m window --space 2;
cmd + ctrl + alt + shift - 3 : yabai -m window --space 3;
cmd + ctrl + alt + shift - 4 : yabai -m window --space 4;
cmd + ctrl + alt + shift - 5 : yabai -m window --space 5;
cmd + ctrl + alt + shift - 6 : yabai -m window --space 6;
cmd + ctrl + alt + shift - 7 : yabai -m window --space 7;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
